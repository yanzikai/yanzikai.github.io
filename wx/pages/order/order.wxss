/* 订单信息  */

.ordermain{
  width: 710rpx;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow:3rpx 5rpx 30rpx 6rpx #eee;
  -webkit-box-shadow:3rpx 5rpx 30rpx 6rpx #eee;
}
.cartone{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.cfrom{
  height: 28rpx;
  line-height: 28rpx;
  background: #7e50ff;
  text-align: center;
  color: #fff;
  display: inline-block;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  padding: 0 20rpx;
  box-shadow:0 4rpx 10rpx 2rpx #d6ccf4;
  -webkit-box-shadow:0 4rpx 10rpx 2rpx #d6ccf4;
}
.cartselect image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 38rpx;
  top: 135rpx;
}
.cartimgbox{
  float: left;
  height: 216rpx;
  width: 130rpx;
  margin-left: 105rpx;
  padding-top: 44rpx;
}
.cartimgbox image{
  height: 216rpx;
  width: 130rpx;
}
.cart-type{
  float: left;
  width:342rpx;
  height:216rpx;
  margin-left: 34rpx;
  margin-top: 44rpx;
  
}
.connum{
  float: left
}
.cprice1{
  font-size: 34rpx;
}
.cprice{
  font-size: 18rpx;
  padding-top: 25rpx;
  margin-bottom: 10rpx;
}
.stock{
  line-height:50rpx;
  color: #cccccc;
}
.ct-type{
  font-size: 26rpx;
}
.connum{
  width: 50rpx;
  height: 200rpx;
  background: #f8f8f8;
  float: right;
  margin-top: 50rpx;
  margin-right: 24rpx;
  position: relative;
  border-radius: 25rpx;
}
.connum .connum1{
  position: absolute;
  width:26rpx;
  height: 26rpx;
  left: 12rpx;
  top: 20rpx;
}
.connum .connum2{
  position: absolute;
  width:26rpx;
  height: 26rpx;
  left: 12rpx;
