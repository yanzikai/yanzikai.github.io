/* swiper  */
.swiper-box .slide-image{
  width: 750rpx;
  height: 416rpx;
}
.swiper-box{
  position: relative;
  height: 420rpx;
  padding-bottom: 35rpx;
  padding-top: 20rpx;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     position: absolute;
     bottom: 0rpx;
}
.swiper-box .wx-swiper-dot{
    width:24rpx;
    display: inline-flex;
    height: 4rpx;
    margin-left: -6rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(48,50,55,0.8);
    border-radius: 2rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:rgba(126,80,255,0.8); 
}
.swiper-box .wx-swiper-dot-active{
    width:43rpx;  
}
